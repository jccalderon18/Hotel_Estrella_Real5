<div class="col-xl-6">
    <div class="card-box">
        <div class="dropdown pull-right">
            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                <i class="mdi mdi-dots-vertical"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <!-- item-->
                <a href="javascript:void(0);" class="dropdown-item">Acciones</a>
                <!-- item-->
                <a href="javascript:void(0);" class="dropdown-item">Otra acción</a>
                <!-- item-->
                <a href="javascript:void(0);" class="dropdown-item">Otra cosa</a>
                <!-- item-->
                <a href="javascript:void(0);" class="dropdown-item">Enlace separado</a>
            </div>
        </div>

        <!-- Título actualizado con color blanco -->
        <h4 class="header-title m-t-0 m-b-30 text-center" style="color: white;">Promedio Encuesta de Satisfacción</h4>

        <canvas id="bar" height="300"></canvas>
    </div>
</div><!-- end col-->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('bar').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Limpieza', 'Servicios', 'Comida', 'Habitación', 'Atención', 'Instalaciones'],
                datasets: [{
                    label: 'Promedio de Calificación',
                    data: [
        @Model.Limpieza.ToString("F1"),
        @Model.Servicios.ToString("F1"),
        @Model.Comida.ToString("F1"),
        @Model.Habitacion.ToString("F1"),
        @Model.Atencion.ToString("F1"),
        @Model.Instalaciones.ToString("F1")
                                            ],
                    // Color azul transparente para las barras
                    backgroundColor: 'rgba(54, 162, 235, 0.2)', // Azul transparente
                    borderColor: 'rgba(54, 162, 235, 1)', // Azul más oscuro para los bordes
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 5,
                        ticks: {
                            color: 'white'  // Color blanco para los números del eje Y
                        }
                    },
                    x: {
                        ticks: {
                            color: 'white'  // Color blanco para las etiquetas del eje X
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: 'white'  // Color blanco para la leyenda
                        }
                    }
                }
            }
        });
    </script>


  
